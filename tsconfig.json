{
    "version": "2.4.2",
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "lib": [
            "es6"
        ],
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "sourceMap": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}